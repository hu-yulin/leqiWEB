<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.UserEntity" table="user" schema="leqi">
        <id name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="text"/>
        </property>
        <property name="password">
            <column name="password" sql-type="text"/>
        </property>
        <property name="token">
            <column name="token" sql-type="text"/>
        </property>
        <property name="startTime">
            <column name="start_time" sql-type="timestamp" not-null="true"/>
        </property>
    </class>
    <class name="bean.UserPicEntity" table="user_pic" schema="leqi">
        <id name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </id>
        <property name="path">
            <column name="path" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>