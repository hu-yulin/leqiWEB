<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.ActivityEntity" table="activity" schema="leqi">
        <id name="activityId">
            <column name="activity_id" sql-type="int(11)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="text"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text"/>
        </property>
        <property name="startTime">
            <column name="start_time" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="endTime">
            <column name="end_time" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="startPlace">
            <column name="start_place" sql-type="text"/>
        </property>
        <property name="endPlace">
            <column name="end_place" sql-type="text"/>
        </property>
        <property name="releaseTime">
            <column name="release_time" sql-type="timestamp"/>
        </property>
    </class>
</hibernate-mapping>