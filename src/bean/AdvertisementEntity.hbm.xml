<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.AdvertisementEntity" table="advertisement" schema="leqi">
        <id name="adId">
            <column name="ad_id" sql-type="int(11)"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </property>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text"/>
        </property>
        <property name="picPath">
            <column name="pic_path" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>